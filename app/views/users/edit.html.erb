<% if @user.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Namw", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :intro, class: "form-control" %>
      </div>
      <div>
        <%= f.label :avatar, "File" %>
        <%= image_tag @user.avatar_url, width: '300px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
