<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-12">
        <div class="">
          <strong><h1><%= @article.title %></h1></strong>
        </div>
        <div class="">
          <%= link_to "Collect" %>
        </div>
        <div class="">
          <%= link_to "Comment" %>
        </div>
      </div>
      <div>
        <div class="col-md-4">
          <!--user info  -->

        </div>
        <div class="col-md-8">
          <div class="col-md-12">
            <% if @article.image?%>
              <%= image_tag article.image, class: "img-responsive img-rounded" %>
            <%else %>
              <img src="http://via.placeholder.com/350x350" class="img-responsive img-rounded">
            <% end %>
          </div>
          <div class="col-md-12">
            <h4><%= @article.content %></h4>
          </div>
          <div class="">
            <%= link_to "Edit", edit_article_path(@article) %>
          </div>
          <div class="">
            <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm:"Are you sure?"} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
