<div class="container">
  <div class="row">
    <%= form_for @article do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
